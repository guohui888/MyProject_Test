<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_bg"
            android:hint="输入手机号"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/checkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_check_number_btn"
            android:padding="10dp"
            android:text="获取验证码"
            android:textColor="@color/get_checkcode_hint_text_color"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>

    <EditText
        android:id="@+id/edCheckNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg"
        android:hint="输入验证码"
        android:padding="10dp"
        android:textSize="15sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edPasswords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg"
        android:hint="密码"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edsurePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="15sp" />

    <Button
        android:id="@+id/registerPhoneBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_login_btn"
        android:padding="10dp"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>