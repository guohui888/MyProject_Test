<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="2dp" >

    <TextView
        android:id="@+id/item_home_buttom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/home_buttom_d1"
        android:text="酒水饮料"
        android:textColor="@color/home_buttom_1"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/item_home_buttom_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/home_lin1"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_home_buttom_large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/defult_nol" />

        <View
            android:id="@+id/temp_view_lin1"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/item_home_buttom_small_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/defult_small" />

            <View
                android:id="@+id/temp_view_lin2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray2" />

            <ImageView
                android:id="@+id/item_home_buttom_small_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
             android:scaleType="fitXY"
                android:src="@drawable/defult_small" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/temp_view_lin3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/item_buttom_type1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/home_buttom_biaoqian"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/item_buttom_type2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/home_buttom_biaoqian"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/item_buttom_type3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/home_buttom_biaoqian"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/item_buttom_type4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/home_buttom_biaoqian"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/item_buttom_type5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_buttom_biaoqian"
            android:gravity="center"
            android:text="" />
    </LinearLayout>

</LinearLayout>